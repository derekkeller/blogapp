<div class="post">
	<tr style="vertical-align:top">
	  <td><%= post.name %></td>
	  <td><%= link_to post.title, post %></td>
	  <td><%= post.content %></td>
	  <td><%= link_to 'Edit', edit_post_path(post) %></td>
		<td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete, :remote => true, :class=>'delete_post' %></td>
	</tr>
</div>